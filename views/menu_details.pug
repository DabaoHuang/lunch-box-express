script.
    var id = "#{shop_id}";
    $('#send').click(function(e){
        var end_date=$('#end_date');
        if (end_date.val()) {
            $.ajax({
                url:'/choose_shop/'+id,
                data: {
                    end_time: end_date.val()
                },
                type:'POST',
                success:function(data){
                    $('.main_body').html(data);
                }
            });
        }else {
            alert('end time error');
        }
        return false;
    });

