html
  head
  body
    table(width='600px')
      tr
        td(width='10%') 編號
        td(width='40%') 品名
        td(width='15%') 總數
        td(width='15%') 單價
        td(width='20%') 小計

      -let i = 1;
      each val in list
        tr
          td #{i++}
          td #{val.name}
          td #{val.count}
          td $ #{val.price}
          td $ #{val.total}

      tr
        td
        td
        td
        td(style="border-top:3px solid white; text-align:right") 總計：
        td(style="border-top:3px solid red") $ #{sum}